generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoPessoa {
  CLIENTE
  PROPRIETARIO
}

model Pessoa {
  id        String     @id @default(cuid())
  nome      String
  cpf       String     @unique
  tipo      TipoPessoa
  imoveis   Imovel[]
  contratos Contrato[]
}

enum TipoImovel {
  APARTAMENTO
  CASA
}

model Imovel {
  id             String     @id @default(cuid())
  cidade         String?
  bairro         String?
  valor          Int
  areaConstruida Float
  numQuartos     Int
  tipo           TipoImovel
  proprietarioId String
  proprietario   Pessoa     @relation(fields: [proprietarioId], references: [id])
  contrato       Contrato?
  tamanhoQuintal Float?
  andar          Int?
}

enum TipoOperacao {
  ALUGUEL
  VENDA
}

model Contrato {
  id           String       @id @default(cuid())
  dataInicio   DateTime
  dataFim      DateTime?
  imovelId     String       @unique
  imovel       Imovel?      @relation(fields: [imovelId], references: [id])
  clienteId    String
  cliente      Pessoa?      @relation(fields: [clienteId], references: [id])
  tipoOperacao TipoOperacao
}
